<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.deepwaterooo.dwsdk"
	      android:theme="@android:style/Theme.NoTitleBar"
          android:versionCode="1"
          android:versionName="1.0"
          xmlns:tools="http://schemas.android.com/tools"
          >
  <!-- package="com.unity3d.player" -->
  <!-- android:installLocation="preferExternal" -->

  <!-- 说是7.0之后,设置系统音量需要权限 -->
  <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
  
  <uses-sdk
      android:minSdkVersion="25"
      android:targetSdkVersion="25" />
  
  <!-- tools:replace="android:icon,android:theme,android:allowBackup" -->
  <application
      android:label="@string/app_name"
	  android:allowBackup="true"
      android:usesCleartextTraffic="true"
      tools:replace="android:allowBackup"
      >
    <!--这里前面加上自己的包名避免引用冲突-->
    <!-- <activity android:name="com.deepwaterooo.dwsdk.MainActivity" -->
<!-- // 这个测试是: 游戏界面常驻一个返回按钮(settings),用来返回安卓SDK; 先把它当作主界面,因为内可嵌套游戏界面     -->
<!-- android:launchMode="singleTask" -->
    <activity android:name="com.deepwaterooo.DWUnityActivity"
              android:exported="true"
              android:process=":raadidcard"
              >
      <!--这里记得加入这个参数，不然会报错 下面一行,模仿补的-->
	  <meta-data android:name="android.app.lib_name" android:value="unity" />
      <meta-data android:name="com.deepwaterooo.DWUnityActivity" android:value="true"/>
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <!-- 这个大概可以不用加, 因为它们是在同一个包裹里的 ? 不行,它还是会报错,说它找不到,在包裹里申明,不在这里申明     -->
    <!-- // 它问我: -->
    <!-- Caused by: android.content.ActivityNotFoundException: Unable to find explicit activity class {com.defaultcompany.trunk/com.deepwaterooo.DWSDK}; have you declared this activity in your AndroidManifest.xml? -->
